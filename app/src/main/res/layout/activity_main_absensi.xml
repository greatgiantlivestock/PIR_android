<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/toolbar_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_default" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.mohammadsholeh.myapplication.CourseActivity"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true"
                    android:text="Lats !" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Longs"/>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_below="@+id/textView11"
                    android:layout_centerHorizontal="true"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Selamat Datang !" />

                <TextView
                    android:id="@+id/texalamat"
                    android:layout_below="@+id/textView11"
                    android:layout_centerHorizontal="true"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="address !" />

                <LinearLayout
                    android:id="@+id/activity_date"
                    android:layout_below="@+id/texalamat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/normal"
                        android:layout_width="0dip"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="25dip"
                        android:minWidth="150dip"
                        android:text="Normal"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/hybrid"
                        android:layout_width="0dip"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="25dip"
                        android:minWidth="150dip"
                        android:text="Satelit"
                        android:textSize="16sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textView4"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="Untuk melakukan absen silahkan klik tombol di bawah"
                    android:layout_below="@+id/maps"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:id="@+id/maps"
                    android:layout_below="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context="com.example.mohammadsholeh.myapplication.MapsActivity" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_image"
                    android:background="@drawable/button"
                    android:text="ABSEN"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:onClick="onButtonClicked"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Terakhir absen pada : "
                    android:layout_below="@+id/btn_image"
                    android:layout_alignLeft="@+id/btn_image"
                    android:layout_alignStart="@+id/btn_image"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp" />

                <TextView
                    android:id="@+id/txt_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="tanggal"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/textView5"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignStart="@+id/textView5" />

                <TextView
                    android:id="@+id/spasi"
                    android:layout_below="@+id/txt_tanggal"
                    android:layout_toRightOf="@+id/txt_tanggal"
                    android:layout_alignBaseline="@+id/txt_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pukul "
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:id="@+id/txt_jam"
                    android:layout_below="@+id/spasi"
                    android:layout_toRightOf="@+id/spasi"
                    android:layout_alignBaseline="@+id/spasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="20dp" />

            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
    <!-- android:layout_marginTop="?android:attr/actionBarSize" -->

    <com.android.canvasing.gglc.absen.ScrimInsertsFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:elevation="10dp"
        android:fitsSystemWindows="true"
        app:insetForeground="#4000" >

        <fragment
            android:id="@+id/fragment_drawer"
            android:name="com.android.canvasing.gglc.absen.NavigationDrawerFragment"
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_navigation_drawer" />
    </com.android.canvasing.gglc.absen.ScrimInsertsFrameLayout>

</android.support.v4.widget.DrawerLayout>