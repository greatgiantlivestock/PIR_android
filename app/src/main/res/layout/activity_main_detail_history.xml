<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eula_relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dip" >

    <Button
        android:id="@+id/close"
        android:background="@drawable/roundedbuttonred"
        android:layout_alignParentRight="true"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="x"/>

    <LinearLayout
        android:id="@+id/activity_customer_linear_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_customer_linear_search"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:padding="7dip" >

        <TextView
            android:id="@+id/activity_sales_order_title_kode_product"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="Detail History Visit"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/dividerHeaderBottom"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/activity_customer_linear_title"
        android:background="#414141" />

    <WebView
        android:id="@+id/webV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerHeaderBottom"
        android:background="@color/white"
        android:divider="@color/listview_divider"
        tools:ignore="WebViewLayout" />
    <ProgressBar
        android:id="@+id/progweb"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>