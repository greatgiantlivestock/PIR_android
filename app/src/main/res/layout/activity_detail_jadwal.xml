<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="@color/dasgboard_grid"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menuBackButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_action_back"
            android:clickable="true"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/titleMenuButton"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:lines="1"
            android:text="Detail Jadwal"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_action_refresh"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!--<include-->
                <!--android:id="@+id/toolbar_actionbar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--layout="@layout/toolbar_default" />-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.04"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Index"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/Ivory3" />

                    <TextView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/index_pir"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.04"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/Ivory3" />

                    <TextView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/nama_customer"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.04"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Jumlah"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/Ivory3" />


                    <TextView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/alamat_customer"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.04"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="DoF"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/Ivory3" />


                    <TextView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/dof_sapi"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Status Kunjungan"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/Ivory3" />


                    <TextView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/status_kunjungan"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bar_"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dip">

                    <TextView
                        android:id="@+id/status_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/Ivory3" />

                    <TextView
                        android:id="@+id/test"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textSize="16sp"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.006"
                    android:orientation="horizontal"
                    android:background="@drawable/roundedbutton"
                    android:padding="3dip" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_customer_linear_title"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/activity_customer_title_kode_customer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:text="@string/app_customer_hint_product"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/activity_customer_title_nama_customer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Qty"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/activity_customer_title_alamat_customer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Satuan"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/activity_customer_title_tanggal_rencana"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="Tanggal update"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.006"
                    android:orientation="horizontal"
                    android:background="@drawable/roundedbutton"
                    android:padding="3dip" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bar_1"
                    android:layout_marginBottom="15dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dip">

                    <TextView
                        android:id="@+id/status_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"
                        android:textColorHint="@color/Ivory3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:fillViewport="true">
                        <ListView
                            android:id="@+id/list"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:background="@color/white"
                            android:divider="@color/listview_divider"
                            android:dividerHeight="0.3dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />
                    </ScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/checkin"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Check In"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:background="@drawable/roundedbutton"/>

                        <Button
                            android:id="@+id/stockFisik"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Stock Fisik"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:background="@drawable/roundedbutton"/>

                        <Button
                            android:id="@+id/displayProduct"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Display Product"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:background="@drawable/roundedbutton"/>
                        <Button
                            android:id="@+id/chiller"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data Chiller"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:background="@drawable/roundedbutton"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/checkin1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:text="Check In Alternatif"
                            android:background="@drawable/roundedbutton"/>
                        <Button
                            android:id="@+id/kompetitor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:text="Kompetitor"
                            android:background="@drawable/roundedbutton"/>
                        <Button
                            android:id="@+id/spg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:text="Aktifitas SPG"
                            android:background="@drawable/roundedbutton"/>
                        <Button
                            android:id="@+id/penjualan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:text="Penjualan"
                            android:background="@drawable/roundedbutton"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_weight="0.12"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/checkout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check Out"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:background="@drawable/roundedbutton"/>

                </LinearLayout>

                <View
                    android:id="@+id/dividerHeaderBottom"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#414141" />
            </LinearLayout>

        </LinearLayout>



    </ScrollView>
</LinearLayout>