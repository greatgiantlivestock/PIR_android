<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/toolbar_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_default" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.08"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List Petani yang Harus Dikunjungi"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textColorHint="@color/Ivory3" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text=""/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_customer_linear_title"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.11"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/activity_customer_title_kode_customer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Petani"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activity_customer_title_nama_customer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Alamat"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activity_customer_title_alamat_customer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginLeft="5dp"
                        android:text="Status Rencana"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activity_customer_title_tanggal_rencana"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="Tanggal Rencana"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.28"
                    android:orientation="horizontal">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:fillViewport="true">
                        <ListView
                            android:id="@+id/list"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:background="@color/white"
                            android:divider="@color/listview_divider"
                            android:dividerHeight="0.8dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />
                    </ScrollView>
                </LinearLayout>

            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:orientation="horizontal">

                <!--<LinearLayout-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_weight="1"-->
                    <!--android:padding="5dp"-->
                    <!--android:orientation="horizontal">-->

                    <Button
                        android:id="@+id/checkin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="CHECK IN"
                        android:textStyle="bold"
                        android:textColor="#208F7C"
                        android:textSize="12dp"
                        android:background="@drawable/ckin_button"/>
                    <Button
                        android:id="@+id/checkout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="#208F7C"
                        android:textSize="12dp"
                        android:text="                 CHECK OUT"
                        android:background="@drawable/ckout_button"/>
                <!--</LinearLayout>-->
            </LinearLayout>

            <View
                android:id="@+id/dividerHeaderBottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#414141" />
        </LinearLayout>

    </LinearLayout>
    <!-- android:layout_marginTop="?android:attr/actionBarSize" -->

    <com.android.pir.gglc.absen.ScrimInsertsFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:elevation="10dp"
        android:fitsSystemWindows="true"
        app:insetForeground="#4000" >

        <fragment
            android:id="@+id/fragment_drawer"
            android:name="com.android.pir.gglc.absen.NavigationDrawerFragment"
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_navigation_drawer" />
    </com.android.pir.gglc.absen.ScrimInsertsFrameLayout>

</android.support.v4.widget.DrawerLayout>