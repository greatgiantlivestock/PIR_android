<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.pir.gglc.fragment1.DataSapiFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nama Petani "
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/nama_petani"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alamat"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/alamat_pertani"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lstatus_checkin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/status_checkin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="Silahkan Upload Foto Sapi Beserta Keterangannya"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/roundedarea"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/activity_history_search"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Foto 1 : "
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/foto_sapi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                        <Button
                            android:id="@+id/lihat"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:text="Lihat"
                            android:textColor="@color/white"
                            android:background="@drawable/roundedbutton"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:id="@+id/foto"
                            android:layout_width="65dp"
                            android:layout_height="35dp"
                            android:text="Foto"
                            android:textColor="@color/white"
                            android:background="@drawable/roundedbutton"
                            android:layout_centerHorizontal="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal" >

                        <Spinner
                            android:id="@+id/eartag"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:hint="eartag"
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/keterangan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:hint="keterangan"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/roundedarea"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/activity_history_search1"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Foto 2 : "
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/foto_sapi1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                        <Button
                            android:id="@+id/lihat1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:text="Lihat"
                            android:textColor="@color/white"
                            android:background="@drawable/roundedbutton"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:id="@+id/foto1"
                            android:layout_width="65dp"
                            android:layout_height="35dp"
                            android:textColor="@color/white"
                            android:background="@drawable/roundedbutton"
                            android:text="Foto"
                            android:layout_centerHorizontal="true"/>
                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/eartag1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="eartag"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/keterangan1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="keterangan"
                        android:textColor="@color/black"/>
                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/roundedarea"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/activity_history_search2"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Foto 3 : "
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/foto_sapi2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                        <Button
                            android:id="@+id/lihat2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:text="Lihat"
                            android:textColor="@color/white"
                            android:background="@drawable/roundedbutton"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:id="@+id/foto2"
                            android:layout_width="65dp"
                            android:layout_height="35dp"
                            android:textColor="@color/white"
                            android:background="@drawable/roundedbutton"
                            android:text="Foto"
                            android:layout_centerHorizontal="true"/>
                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/eartag2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="eartag"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/keterangan2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="keterangan"
                        android:textColor="@color/black"/>
                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/roundedarea"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/activity_history_search3"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Foto 4 : "
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/foto_sapi3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/black"/>

                        <Button
                            android:id="@+id/lihat3"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:text="Lihat"
                            android:textColor="@color/white"
                            android:background="@drawable/roundedbutton"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:id="@+id/foto3"
                            android:layout_width="65dp"
                            android:layout_height="35dp"
                            android:textColor="@color/white"
                            android:background="@drawable/roundedbutton"
                            android:text="Foto"
                            android:layout_centerHorizontal="true"/>
                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/eartag3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="eartag"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/keterangan3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="keterangan"
                        android:textColor="@color/black"/>
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:id="@+id/test_check"/>
                    <CheckBox
                        android:id="@+id/assessment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Assessment"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_no_checkin"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/title_no_checkin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/app_customer_checkin_no_cjheckin"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/no_checkin"
                        android:editable="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="@string/app_customer_checkin_hint_no_cjheckin"
                        android:layout_centerHorizontal="true"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ImgCust"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar"/>
                <ImageView
                    android:id="@+id/ImgCust1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar"/>
                <ImageView
                    android:id="@+id/ImgCust2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar"/>
                <ImageView
                    android:id="@+id/ImgCust3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar"/>
            </LinearLayout>

            <Button
                android:id="@+id/checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/roundedbutton"
                android:text="Upload"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

